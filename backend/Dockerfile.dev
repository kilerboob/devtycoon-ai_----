# Backend Dev Dockerfile with hot reload
FROM node:20-alpine

WORKDIR /app

# Install ts-node globally for dev
RUN npm install -g ts-node nodemon

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Expose backend port
EXPOSE 3000

# Start with nodemon for hot reload
CMD ["npx", "nodemon", "--watch", "src", "--ext", "ts", "--exec", "ts-node", "src/server.ts"]
